<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LayoutVerticalStyle"
    android:layout_gravity="end" >

    <LinearLayout
        style="@style/LayoutVerticalStyle"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/txtAccountValidation"
            style="@style/ErrorLableStyle"
            android:layout_marginBottom="10dp"
            android:text="@string/mesError"
            android:visibility="gone" />

        <TextView
            style="@style/SettingLableStyle"
            android:text="@string/txtId"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/tvId"
            style="@style/SettingLableStyle"
            android:layout_width="270dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp" />

        <TextView
            style="@style/SettingLableStyle"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/txtEmailAddress"
            android:textSize="8pt" />

        <EditText
            android:id="@+id/txtEmailAccount"
            style="@style/HomeTxtDescStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="start|center_horizontal"
            android:background="@drawable/edit_text_border_style"
            android:paddingLeft="5dp" />

    </LinearLayout>

    <TextView
        style="@style/SettingLableStyle"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/txtPassword"
        android:textSize="8pt" />

    <EditText
        android:id="@+id/txtPasswordAccount"
        style="@style/HomeTxtDescStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/edit_text_border_style"
        android:ems="10"
        android:inputType="textPassword"
        android:maxLength="20"
        android:paddingLeft="5dp"
        android:password="true" />

    <Button
        android:id="@+id/btnChangeAccount"
        style="@style/ButtonStyle"
        android:layout_marginTop="10dp"
        android:background="@drawable/red_button"
        android:text="OK" />

    <LinearLayout
        style="@style/LayoutVerticalStyle"
        android:gravity="center_horizontal" >
    </LinearLayout>

</LinearLayout>